@model MechanicFormViewModel
@{
  string action = "Create";
  string buttonText = "Add";
  if (Model.FormEdit)
  {
    action = "Edit";
    buttonText = "Save";
  }
}

<form class="form" asp-controller="Mechanics" asp-action=@action method="post">
  @if (Model.FormEdit)

  {
    <input asp-for="@Model.MechanicId" type="hidden" />
  }
  <div class="form-group">
    <label asp-for="@Model.FirstName"></label><br />
    <input asp-for="@Model.FirstName" type="text" placeholder="First Name" /><br />
    <span asp-validation-for="@Model.FirstName"></span><br />
  </div>
  <div class="form-group">
    <label asp-for="@Model.LastName"></label><br />
    <input asp-for="@Model.LastName" type="text" placeholder="Last Name" /><br />
    <span asp-validation-for="@Model.LastName"></span><br />
  </div>
  @if(@Model.MakeSelectList.Any())
  {
    <div class="form-group">
      <label asp-for="@Model.SelectedMakes"></label><br />
      <select asp-for="@Model.SelectedMakes" multiple asp-items="@Model.MakeSelectList"></select>
      <span asp-validation-for="@Model.SelectedMakes"></span>
    </div>
  }
  <div>
    <label asp-for="@Model.About"></label><br />
    <textarea asp-for="@Model.About" placeholder="About"></textarea><br />
    <span asp-validation-for="@Model.About"></span><br />
  </div>
  <button class="button" type="submit">@buttonText</button>
</form>

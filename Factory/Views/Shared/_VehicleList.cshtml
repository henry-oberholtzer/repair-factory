@model List<Vehicle>

<ul class="list-group">
@if (Model.Count == 0)
{
  <li class="list-item">No vehicles have been added</li>
}

@foreach (Vehicle vehicle in Model)
{
  <li class="list-item">
  <a asp-controller="Vehicles" asp-action="Details" asp-route-id=@vehicle.VehicleId>
    @vehicle.YearMakeModelPlate
  </a>
  <p>
    Mechanics Assigned: @vehicle.VehicleMechanics.Count
  </p>
  </li>
}
</ul>

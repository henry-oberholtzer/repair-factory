@{
  Mechanic mechanic = Model["Mechanic"];
  string action = Model["Action"];
  string buttonText = "Add";
  string dateAdded = DateTime.Now.ToString("dd-MM-yyyy");
  if (Model["Usage"] == "Edit")
  {
    buttonText = "Save";
    dateAdded = mechanic.DateAdded.ToString("dd-MM-yyyy");
  }
}

<form asp-controller="Stylists" asp-action=@action method="post">
  @if(action == "Edit")
  {
    <input asp-for="@mechanic.MechanicId" type="hidden" />
  }
  <div class="form-group">
    <label asp-for="@mechanic.FirstName"></label><br />
    <input asp-for="@mechanic.FirstName" type="text" placeholder="First Name" /><br />
    <span asp-validation-for="@mechanic.FirstName"></span><br />
  </div>
    <div class="form-group">
    <label asp-for="@mechanic.LastName"></label><br />
    <input asp-for="@mechanic.LastName" type="text" placeholder="Last Name" /><br />
    <span asp-validation-for="@mechanic.LastName"></span><br />
  </div>
  <div>
  <label asp-for="@mechanic.About"></label><br />
  <textarea asp-for="@mechanic.About" placeholder="About"></textarea><br />
  <span asp-validation-for="@mechanic.About"></span><br />
  </div>
  <input asp-for="@mechanic.DateAdded" type="hidden" value=@dateAdded />
  <button class="button" type="submit">@buttonText</button>
</form>

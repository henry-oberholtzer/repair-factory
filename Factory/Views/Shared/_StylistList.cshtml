@model List<Stylist>

<ol class="list-group">
@if (Model.Count == 0)
{
  <li class="list-item">No stylists have been added.</li>
}

@foreach (Stylist stylist in Model)
{
  <li class="list-item"><a asp-controller="Stylists" asp-action="Details" asp-route-id=@stylist.StylistId>@stylist.Name</a>
      @await Html.PartialAsync("_StylistButtonGroup", stylist)</li>
}
</ol>

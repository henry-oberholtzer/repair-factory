@model List<Mechanic>

<ol class="list-group">
@if (Model.Count == 0)
{
  <li class="list-item">No mechanics have been added.</li>
}

@foreach(Mechanic mechanic in Model)
{
  <li class="list-item"><a asp-controller="Mechanics" asp-action="Details" asp-route-id=@mechanic.MechanicId>
    @mechanic.LastName, @mechanic.FirstName</a>
    <p>Vehicles Assigned: @mechanic.VehicleMechanics.Count</p>
  </li>
}
</ol>

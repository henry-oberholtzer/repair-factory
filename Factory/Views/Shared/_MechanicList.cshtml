@model List<Mechanic>

<table class="table">
  <thead>
    <th scope="col">Name</th>
    <th scope="col">Makes</th>
    <th scope="col">Vehicles</th>
  </thead>
  <tbody>
    @if (Model.Count == 0)
    {
      <tr class="table-row">No mechanics have been added.</tr>
    }

    @foreach (Mechanic mechanic in Model)
    {
      <tr class="table-row">
        <td>
          <a class="expanded" asp-controller="Mechanics" asp-action="Details" asp-route-id=@mechanic.MechanicId>
          </a>
            @mechanic.FirstName @mechanic.LastName

        </td>
        <td>@mechanic.MakeMechanics.Count</td>
        <td>@mechanic.VehicleMechanics.Count</td>
      </tr>
    }
  </tbody>
</table>

